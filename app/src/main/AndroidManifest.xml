<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.dmitriev.ivand.divider">

    <application

        android:allowBackup="true"
        android:icon="@mipmap/divider_launcher"
        android:label="@string/app_name"

        android:roundIcon="@mipmap/divider_round_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.dmitriev.ivand.divider.ActivityMainMenu"
                  android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.dmitriev.ivand.divider.ActivityGameStart"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.dmitriev.ivand.divider.ActivityGameRules"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.dmitriev.ivand.divider.ActivityResult"
                  android:screenOrientation="portrait"/>
        <activity android:name="com.dmitriev.ivand.divider.ActivityChangeDifficult"
                  android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>